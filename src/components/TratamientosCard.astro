---
import { ArrowUpRight } from "@lucide/astro";
import { Image } from "astro:assets";

const { p: item } = Astro.props;
---

<div
  class="min-w-[80vw] md:min-w-full snap-center group relative h-[450px] md:h-[500px] rounded-[2.5rem] md:rounded-4xl overflow-hidden bg-slate-200 shadow-lg transition-all duration-700"
>
  <Image
    src={item.image}
    alt={item.title}
    width={400}
    height={600}
    class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110"
  />

  <div
    class="absolute inset-0 bg-linear-to-t from-slate-950 via-slate-950/40 to-transparent opacity-70 md:opacity-80 group-hover:opacity-90 transition-opacity"
  >
  </div>

  <div class="absolute inset-0 p-8 flex flex-col justify-end">
    <div
      class="translate-y-0 md:translate-y-4 group-hover:translate-y-0 transition-transform duration-500"
    >
      <h4
        class="text-2xl font-semibold text-white mb-2 md:mb-3 flex items-center justify-between"
      >
        {item.title}
        <span
          class="opacity-100 md:opacity-0 group-hover:opacity-100 transition-all duration-500 bg-white/20 p-2 rounded-full backdrop-blur-md scale-90 md:scale-100"
        >
          <ArrowUpRight size={20} class="text-white" />
        </span>
      </h4>

      <div
        class="h-auto md:h-0 overflow-hidden group-hover:h-auto mb-4 md:mb-0 group-hover:mb-4 transition-all duration-500 opacity-90 md:opacity-0 group-hover:opacity-100"
      >
        <p
          class="text-white/80 text-sm font-light leading-relaxed line-clamp-2 md:line-clamp-none"
        >
          {item.description}
        </p>
      </div>

      <div
        class="w-12 h-1 bg-brand-primary rounded-full transition-all duration-500 group-hover:w-full"
      >
      </div>
    </div>
  </div>
</div>
