---
import {
  Calendar,
  Clock,
  User,
  CheckCircle2,
  ChevronRight,
} from "@lucide/astro";
---

<section id="reserva" class="py-24 bg-slate-50">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2
          class="text-brand-primary font-bold tracking-[0.25em] uppercase text-xs mb-4"
        >
          Reserva Digital
        </h2>
        <h3
          class="text-4xl md:text-6xl max-w-xl mx-auto font-serif text-ink-primary leading-tight"
        >
          Agenda tu cita <span class="italic font-light text-brand-primary"
            >en menos de 1 minuto</span
          >
        </h3>
      </div>

      <div
        class="bg-white rounded-3xl shadow-2xl shadow-slate-200/60 border border-base-border overflow-hidden"
      >
        <div class="flex h-1.5 bg-surface-200">
          <div
            id="progress-bar"
            class="bg-brand-primary w-1/3 transition-all duration-700 ease-in-out"
          >
          </div>
        </div>

        <div class="p-8 md:p-16">
          <form id="appointment-form" class="relative">
            <div id="step-1" class="space-y-10 animate-fade-in">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                <div>
                  <label
                    class="flex items-center gap-2 text-[10px] uppercase tracking-widest font-bold text-ink-muted mb-6"
                  >
                    <Calendar size={14} class="text-brand-primary" />
                    1. Selecciona el D√≠a
                  </label>
                  <div class="grid grid-cols-4 gap-3">
                    {
                      [
                        "Lun 16",
                        "Mar 17",
                        "Mie 18",
                        "Jue 19",
                        "Vie 20",
                        "Sab 21",
                      ].map((dia) => (
                        <label class="cursor-pointer group">
                          <input
                            type="radio"
                            name="fecha"
                            value={dia}
                            class="peer hidden"
                          />
                          <div class="py-4 rounded-2xl border border-slate-100 text-center transition-all peer-checked:bg-slate-900 peer-checked:text-white peer-checked:border-slate-900 hover:border-brand-primary">
                            <span class="block text-[10px] uppercase font-bold opacity-60 group-hover:opacity-100">
                              {dia.split(" ")[0]}
                            </span>
                            <span class="text-lg font-serif italic">
                              {dia.split(" ")[1]}
                            </span>
                          </div>
                        </label>
                      ))
                    }
                  </div>
                </div>

                <div>
                  <label
                    class="flex items-center gap-2 text-[10px] uppercase tracking-widest font-bold text-slate-400 mb-6"
                  >
                    <Clock size={14} class="text-brand-primary" />
                    2. Horarios Disponibles
                  </label>
                  <div class="grid grid-cols-2 gap-3">
                    {
                      [
                        "09:00 AM",
                        "10:30 AM",
                        "12:00 PM",
                        "03:00 PM",
                        "04:30 PM",
                        "06:00 PM",
                      ].map((hora) => (
                        <label class="cursor-pointer">
                          <input
                            type="radio"
                            name="hora"
                            value={hora}
                            class="peer hidden"
                          />
                          <div class="py-3 px-4 rounded-xl border border-slate-100 text-center text-sm font-medium transition-all peer-checked:bg-brand-primary peer-checked:text-white peer-checked:border-brand-primary hover:bg-slate-50">
                            {hora}
                          </div>
                        </label>
                      ))
                    }
                  </div>
                </div>
              </div>

              <button
                id="btnPasoUno"
                type="button"
                onclick="nextStep(2)"
                disabled
                class="w-full md:w-auto float-right px-10 py-4 bg-slate-900 text-white rounded-2xl font-bold text-xs uppercase tracking-widest hover:bg-brand-primary transition-all inline-flex items-center gap-2 mb-6 md:mb-0 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:bg-slate-900"
              >
                Siguiente paso <ChevronRight size={18} />
              </button>
            </div>

            <div id="step-2" class="hidden space-y-8 animate-fade-in">
              <label
                class="flex items-center gap-2 text-[10px] uppercase tracking-widest font-bold text-slate-400 mb-2"
              >
                <User size={14} class="text-brand-primary" /> 3. Informaci√≥n de Contacto
              </label>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <input
                  type="text"
                  id="nombre"
                  placeholder="Nombre completo"
                  class="w-full px-6 py-4 rounded-2xl bg-slate-50 border border-slate-100 outline-none focus:border-brand-primary focus:bg-white transition-all"
                />
                <select
                  id="tratamiento"
                  class="w-full px-6 py-4 rounded-2xl bg-slate-50 border border-slate-100 outline-none focus:border-brand-primary focus:bg-white transition-all appearance-none text-slate-500"
                >
                  <option disabled selected>Tratamiento de inter√©s</option>
                  <option>Limpieza Profunda</option>
                  <option>Dise√±o de Sonrisa</option>
                  <option>Rehabilitaci√≥n Oral</option>
                  <option>Urgencia / Dolor</option>
                </select>
              </div>

              <textarea
                id="motivo"
                placeholder="Cu√©ntanos brevemente el motivo de tu consulta..."
                rows="3"
                class="w-full px-6 py-4 rounded-2xl bg-slate-50 border border-slate-100 outline-none focus:border-brand-primary focus:bg-white transition-all resize-none"
              ></textarea>

              <div
                class="flex flex-col md:flex-row gap-4 justify-between items-center pt-6"
              >
                <button
                  type="button"
                  onclick="nextStep(1)"
                  class="text-[10px] uppercase tracking-widest font-bold text-slate-400 hover:text-slate-900 transition-colors"
                  >‚Üê Volver</button
                >
                <button
                  type="button"
                  onclick="sendWhatsApp()"
                  class="w-full md:w-auto px-12 py-5 bg-brand-primary text-white rounded-2xl font-bold text-xs uppercase tracking-widest hover:shadow-2xl hover:shadow-brand-primary/40 transition-all flex items-center justify-center gap-3"
                >
                  Confirmar por WhatsApp <CheckCircle2 size={18} />
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  function validarPasoUno() {
    const fecha = document.querySelector('input[name="fecha"]:checked');
    const hora = document.querySelector('input[name="hora"]:checked');
    const btn = document.getElementById("btnPasoUno");

    if (btn) {
      btn.disabled = !(fecha && hora);
    }
  }

  document.addEventListener("change", (e) => {
    if (e.target.name === "fecha" || e.target.name === "hora") {
      validarPasoUno();
    }
  });

  function nextStep(step) {
    const s1 = document.getElementById("step-1");
    const s2 = document.getElementById("step-2");
    const progress = document.getElementById("progress-bar");

    if (step === 2) {
      s1.classList.add("hidden");
      s2.classList.remove("hidden");
      progress.style.width = "100%";
    } else {
      s2.classList.add("hidden");
      s1.classList.remove("hidden");
      progress.style.width = "50%";
      validarPasoUno();
    }
  }

  function sendWhatsApp() {
    const fecha = document.querySelector('input[name="fecha"]:checked')?.value;
    const hora = document.querySelector('input[name="hora"]:checked')?.value;
    const nombre = document.getElementById("nombre").value.trim();
    const tratamiento = document.getElementById("tratamiento").value;
    const motivo = document.getElementById("motivo").value.trim();

    if (!nombre || nombre.length < 3) {
      alert("Por favor, ingresa tu nombre completo.");
      return;
    }

    const mensaje = `Hola Dr. Kong! üëã Deseo agendar una cita.%0A%0Aüóì *Fecha:* ${fecha}%0A‚è∞ *Hora:* ${hora}%0Aüë§ *Paciente:* ${nombre}%0Aü¶∑ *Tratamiento:* ${tratamiento}%0Aüìù *Motivo:* ${motivo}`;

    window.open(`https://wa.me/51987654321?text=${mensaje}`, "_blank");
  }
</script>

<style>
  .animate-fade-in {
    animation: fadeIn 0.5s ease-out forwards;
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
