---
import { contacto } from "@/lib/data";
import { MapPin, Calendar, ArrowRight, CircleCheck } from "@lucide/astro";
import { Image } from "astro:assets";

const heading_main = "Dr. Joaquin Kong San";
const heading_sub = "Especialista Dental";
const desc =
  "Combinamos tecnología de vanguardia y un enfoque humano para diseñar la sonrisa que siempre has deseado.";
---

<header
  class="relative w-full min-h-screen lg:min-h-[85dvh] flex items-center bg-white overflow-hidden"
>
  <div
    class="absolute top-0 right-0 w-full lg:w-[50%] h-full z-0 hidden lg:block"
    style="clip-path: polygon(20% 0%, 100% 0%, 100% 100%, 0% 100%);"
  >
    <div class="absolute inset-0 bg-brand-primary/5 z-10"></div>
    <Image
      src="/assets/images/dr-joaquin-kong-san-preview.png"
      alt="Dr. Joaquín Kong San"
      width={1200}
      height={1600}
      class="w-full h-full object-cover object-top"
      loading="eager"
    />

    <div
      class="absolute bottom-6 right-6 z-20 w-fit backdrop-blur-2xl bg-white/90 p-5 rounded-2xl shadow-2xl border border-white/50"
    >
      <div class="flex items-center gap-3">
        <div
          class="w-10 h-10 bg-brand-primary rounded-xl flex items-center justify-center text-white shadow-lg shadow-brand-primary/20"
        >
          <CircleCheck size={20} />
        </div>
        <div>
          <p
            class="text-[11px] font-black text-slate-900 uppercase tracking-tight"
          >
            Dr. en Estomatología
          </p>
          <p
            class="text-[9px] text-brand-primary font-bold uppercase tracking-widest"
          >
            Especialista Senior
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto relative z-20">
    <div class="grid grid-cols-1 pt-8 lg:pt-12 lg:grid-cols-12 items-center">
      <div
        class="lg:col-span-7 px-6 text-center lg:text-left py-20"
      >
        <div class="space-y-8">
          <a
            href={contacto.google_maps_link}
            target="_blank"
            class="group inline-flex items-center gap-2 text-slate-400 font-bold tracking-[0.2em] uppercase text-[10px] hover:text-brand-primary transition-colors"
          >
            <MapPin size={14} class="text-brand-primary animate-pulse" />
            {contacto.address}
          </a>

          <h1
            class="text-4xl md:text-6xl xl:text-7xl font-serif text-slate-900 leading-[1.05] tracking-tighter"
          >
            {heading_main}
            <br />
            <span class="text-brand-primary italic font-light"
              >{heading_sub}</span
            >
          </h1>

          <p
            class="max-w-xl mx-auto lg:mx-0 text-lg md:text-xl text-slate-500 leading-relaxed font-light"
          >
            {desc}
          </p>

          <div
            class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-8 pt-4"
          >
            <a
              href="#contacto"
              class="flex items-center justify-center gap-3 px-10 py-5 bg-slate-900 text-white rounded-2xl font-bold text-[11px] uppercase tracking-[0.2em] transition-all hover:bg-brand-primary hover:shadow-2xl hover:shadow-brand-primary/20 active:scale-95 w-full sm:w-auto"
            >
              <Calendar size={16} />
              Agendar Cita
            </a>

            <a
              href="#tratamientos"
              class="group flex items-center gap-4 text-slate-900 font-bold text-[11px] uppercase tracking-[0.2em] hover:text-brand-primary transition-colors"
            >
              <div
                class="w-12 h-12 rounded-full border border-slate-200 flex items-center justify-center group-hover:border-brand-primary transition-colors"
              >
                <ArrowRight size={18} />
              </div>
              Ver Tratamientos
            </a>
          </div>

          <div
            class="flex items-center justify-center lg:justify-start gap-5 pt-8 w-fit mx-auto lg:mx-0"
          >
            <div class="flex -space-x-3">
              {
                [
                  "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?q=80&w=100&auto=format&fit=crop",
                  "https://images.unsplash.com/photo-1494790108377-be9c29b29330?q=80&w=100&auto=format&fit=crop",
                  "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?q=80&w=100&auto=format&fit=crop",
                ].map((url, i) => (
                  <div class="relative group">
                    <img
                      src={url}
                      alt={`Paciente satisfecho ${i + 1}`}
                      class="w-12 h-12 rounded-full border-4 border-white shadow-sm object-cover transition-transform duration-300 group-hover:-translate-y-1 group-hover:z-10"
                    />
                  </div>
                ))
              }
            </div>
            <div class="text-left">
              <p
                class="text-[10px] uppercase tracking-widest text-slate-400 font-black leading-none mb-1"
              >
                Confianza Real
              </p>
              <p class="text-sm font-bold text-slate-800">
                +200 Sonrisas logradas
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="lg:hidden">
        <div class="relative aspect-4/5 overflow-hidden">
          <div
            class="absolute inset-0 bg-linear-to-t from-brand-primary/40 via-transparent to-transparent z-10"
          >
          </div>

          <Image
            src="/assets/images/dr-joaquin-kong-san-preview.png"
            alt="Dr. Joaquín Kong San"
            width={600}
            height={750}
            class="w-full h-full object-cover object-top"
          />

          <div
            class="absolute bottom-6 left-6 right-6 z-20 backdrop-blur-2xl bg-white/90 p-5 rounded-4xl shadow-2xl border border-white/50"
          >
            <div class="flex items-center gap-3">
              <div
                class="w-10 h-10 bg-brand-primary rounded-xl flex items-center justify-center text-white shadow-lg shadow-brand-primary/20"
              >
                <CircleCheck size={20} />
              </div>
              <div>
                <p
                  class="text-[11px] font-black text-slate-900 uppercase tracking-tight"
                >
                  Dr. en Estomatología
                </p>
                <p
                  class="text-[9px] text-brand-primary font-bold uppercase tracking-widest"
                >
                  Especialista Senior
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  h1 {
    text-wrap: balance;
  }
</style>
