---
import { mision, vision } from "@/lib/data";
import { Target, Eye, Quote } from "@lucide/astro";
---

<section id="sobre-mi" class="py-24 bg-white overflow-hidden">
  <div class="container mx-auto">
    <div class="text-center max-w-xl mx-auto mb-20 px-4 md:px-0">
      <h2
        class="text-brand-primary font-bold tracking-[0.25em] uppercase text-xs mb-4"
      >
        Fundamentos
      </h2>
      <h3 class="text-4xl md:text-6xl font-serif text-slate-900 leading-tight">
        Nuestra filosofía de <span class="italic font-light text-brand-primary"
          >cuidado integral</span
        >
      </h3>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 items-stretch md:rounded-4xl overflow-hidden">
      <div
        class="group relative p-10 md:p-16 bg-slate-50 border border-slate-100 transition-all duration-700 hover:shadow-2xl hover:shadow-brand-primary/5"
      >
        <div class="relative z-10">
          <div
            class="inline-flex p-4 bg-white rounded-2xl shadow-sm mb-8 text-brand-primary group-hover:scale-110 transition-transform duration-500"
          >
            <Target size={32} stroke-width={1.5} />
          </div>

          <h4 class="text-3xl font-serif mb-6 text-slate-900">Misión</h4>

          <div class="relative">
            <Quote
              class="absolute -top-4 -left-6 text-brand-primary/10 w-12 h-12 -z-10"
            />
            <p class="text-lg text-ink-muted leading-relaxed font-light italic">
              "{mision}"
            </p>
          </div>

          <div class="mt-10 flex items-center gap-4">
            <div class="h-px w-12 bg-brand-primary/30"></div>
            <span
              class="text-[10px] uppercase tracking-widest font-bold text-ink-muted"
              >Excelencia Clínica</span
            >
          </div>
        </div>

        <div
          class="absolute top-0 right-0 w-32 h-32 bg-linear-to-bl from-brand-primary/5 to-transparent"
        >
        </div>
      </div>

      <div
        class="group relative p-10 md:p-16 bg-linear-45 from-brand-dark to-brand-dark/60 transition-all duration-700 hover:shadow-2xl hover:shadow-slate-900/20 overflow-hidden"
      >
        <div
          class="absolute inset-0 opacity-5 pointer-events-none bg-[radial-gradient(#fff_1px,transparent_1px)] bg-size-[20px_20px]"
        >
        </div>

        <div class="relative z-10">
          <div
            class="inline-flex p-4 bg-white/10 backdrop-blur-md rounded-2xl mb-8 text-ink-inverse group-hover:scale-110 transition-transform duration-500"
          >
            <Eye size={32} stroke-width={1.5} />
          </div>

          <h4 class="text-3xl font-serif mb-6 text-white">Visión</h4>

          <p class="text-lg text-slate-300 leading-relaxed font-light">
            {vision}
          </p>

          <div class="mt-10 flex items-center gap-4">
            <div class="h-px w-12 bg-brand-light/30"></div>
            <span
              class="text-[10px] uppercase tracking-widest font-bold text-ink-inverse"
              >Futuro e Innovación</span
            >
          </div>
        </div>

        <div
          class="absolute -bottom-20 -left-20 w-64 h-64 bg-surface-100/20 rounded-full blur-[100px]"
        >
        </div>
      </div>
    </div>
  </div>

  <div
    class="mt-20 px-6 py-10 border-y border-base-border flex flex-wrap justify-center gap-12 md:gap-24"
  >
    {
      [
        "Ética Profesional",
        "Atención Humana",
        "Innovación Científica",
        "Prevención",
      ].map((valor) => (
        <div class="flex items-center gap-3">
          <div class="w-1.5 h-1.5 rounded-full bg-brand-primary" />
          <span class="text-xs font-bold uppercase tracking-[0.2em] text-slate-700">
            {valor}
          </span>
        </div>
      ))
    }
  </div>
</section>
