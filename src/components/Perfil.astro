---
import { Image } from "astro:assets";
import { Download } from "@lucide/astro";
---

<section class="relative px-6 pt-18 pb-0 md:py-28 overflow-hidden">
  <div
    class="absolute top-0 right-0 w-1/3 h-full bg-slate-50 -z-10 hidden lg:block"
  >
  </div>
  <div
    class="absolute top-20 left-10 w-64 h-64 bg-brand-primary/5 rounded-full blur-[100px] -z-10"
  >
  </div>

  <div class="container mx-auto mb-16">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-4 md:gap-12 items-center">
      <div class="lg:col-span-5 relative">
        <div class="relative group">
          <div
            class="relative z-10 rounded-4xl overflow-hidden shadow-2xl shadow-slate-300/50 bg-slate-100 flex items-end justify-center"
          >
            <div
              class="absolute inset-0 bg-linear-to-t from-brand-primary/20 via-transparent to-transparent"
            >
            </div>
            <div
              class="absolute inset-0 bg-[radial-gradient(circle_at_center,var(--tw-gradient-from)_0%,transparent_70%)] from-white/80 to-transparent"
            >
            </div>

            <Image
              src="/assets/images/dr-joaquin-kong-san-preview.png"
              alt="Dr. Joaquín Kong San"
              width={800}
              height={600}
              loading="eager"
              class="relative z-20 w-full h-[500px] md:h-[600px] object-contain object-bottom drop-shadow-[0_20px_30px_rgba(0,0,0,0.15)] group-hover:scale-105 transition-transform duration-700 ease-out"
            />

            <div
              class="absolute bottom-6 left-6 right-6 z-40 md:hidden bg-white/20 backdrop-blur-md border border-white/30 p-5 rounded-3xl"
            >
              <p
                class="text-[10px] uppercase tracking-widest text-brand-primary font-bold mb-1"
              >
                Odontólogo Especialista
              </p>
              <h1 class="text-3xl font-serif text-slate-900 leading-none">
                Joaquín Kong San
              </h1>
            </div>

            <div
              class="absolute inset-x-0 bottom-0 h-1/3 bg-linear-to-t from-brand-dark/40 to-transparent z-30 pointer-events-none"
            >
            </div>
          </div>

          <div
            class="absolute -top-6 -left-6 w-32 h-32 border border-brand-primary/10 rounded-full -z-10 animate-pulse"
          >
          </div>
          <div
            class="absolute -bottom-10 -right-10 w-64 h-64 bg-brand-primary/5 rounded-full blur-3xl -z-10"
          >
          </div>
        </div>

        <div
          class="absolute -bottom-6 -right-6 bg-slate-900 text-white p-8 rounded-3xl shadow-xl z-20 hidden md:block"
        >
          <p class="text-4xl font-serif italic text-brand-light">10+</p>
          <p
            class="text-[10px] uppercase tracking-[0.2em] font-bold text-slate-400"
          >
            Años de <br /> Trayectoria
          </p>
        </div>
      </div>

      <div class="lg:col-span-7 lg:pl-12">
        <div class="hidden md:block">
          <h2
            class="text-brand-primary font-bold tracking-[0.25em] uppercase text-[10px] mb-6"
          >
            Perfil Profesional
          </h2>
          <h1
            class="text-5xl md:text-7xl font-serif text-slate-900 leading-tight mb-8"
          >
            Dr. Joaquin <br />
            <span class="italic font-light text-brand-primary">Kong San</span>
          </h1>
        </div>

        <p
          class="text-xl text-slate-600 font-light leading-relaxed mb-10 max-w-2xl mt-4 md:mt-0"
        >
          Especialista en <span class="text-slate-900 font-medium"
            >Rehabilitación Oral y Estética Dental</span
          >. Mi enfoque combina la precisión técnica con una visión artística
          para restaurar no solo la función, sino la confianza de cada paciente.
        </p>

        <div class="flex flex-col sm:flex-row items-center gap-6">
          <a
            href="/cv-dr-joaquin-kong.pdf"
            download
            class="group flex items-center gap-3 text-slate-900 font-bold text-[11px] uppercase tracking-[0.2em] hover:text-brand-primary transition-colors"
          >
            <div
              class="w-12 h-12 rounded-full border border-slate-200 flex items-center justify-center group-hover:border-brand-primary transition-colors"
            >
              <Download size={18} />
            </div>
            Descargar Currículum
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
