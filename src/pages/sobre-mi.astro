---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { testimonios } from "@/lib/data";
import TestimoniosCarrusel from "@/components/TestimoniosCarrusel.astro";
import Perfil from "@/components/Perfil.astro";
import MisionVision from "@/components/MisionVision.astro";
import Mapa from "@/components/Mapa.astro";
---

<BaseLayout title="" desc="">
  <Perfil />

  <section class="bg-white py-10 md:py-24 px-0 md:px-6">
    <div
      class="relative container mx-auto group overflow-visible md:overflow-hidden py-10"
    >
      <div
        class="relative md:absolute top-0 left-0 h-auto md:h-full w-full md:w-[45%] z-20 md:bg-linear-to-r md:from-white md:via-white/95 md:to-transparent flex flex-col justify-center px-6 md:px-0 mb-10 md:mb-0 pointer-events-none"
      >
        <div class="max-w-sm pointer-events-auto">
          <h2
            class="text-brand-primary font-bold tracking-[0.25em] uppercase text-xs mb-4"
          >
            Testimonios
          </h2>
          <strong
            class="block font-light text-3xl md:text-4xl font-serif text-slate-900 leading-tight mb-4"
          >
            Experiencias reales <br />
            <span class="font-light text-brand-primary">de mis pacientes</span>
          </strong>
          <p
            class="text-slate-500 font-light text-sm md:text-base leading-relaxed"
          >
            Esto es lo que piensan algunos de mis pacientes sobre los resultados
            y la atenci√≥n recibida.
          </p>

          <div class="mt-8 h-px w-12 bg-brand-primary/40 hidden md:block"></div>
        </div>
      </div>

      <div class="md:pl-[30%] lg:pl-[25%]">
        <TestimoniosCarrusel t={testimonios} />
      </div>

      <div
        class="hidden md:block absolute top-0 right-0 h-full w-32 bg-linear-to-l from-white to-transparent z-20 pointer-events-none"
      >
      </div>
    </div>
  </section>

  <MisionVision />
  <Mapa />
</BaseLayout>
